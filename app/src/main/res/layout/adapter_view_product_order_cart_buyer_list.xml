<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Product_Order_Cart_Product_ID"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:text="Name: "
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="175dp"
                            android:layout_height="50dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="55dp"
                                    android:layout_height="25dp"
                                    android:text="Contact:" />

                                <TextView
                                    android:id="@+id/Product_Order_Cart_Buyer_List_View_Contact"
                                    android:layout_width="120dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="59dp"
                                    android:layout_height="25dp"
                                    android:text="Location:" />

                                <Spinner
                                    android:id="@+id/Product_Order_Cart_Buyer_List_View_Location_Spinner"
                                    android:layout_width="120dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:text="Address: " />

                        <TextView
                            android:id="@+id/Product_Order_Cart_Buyer_List_View_Address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>