<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BtnEditProfileEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="16dp"
        android:backgroundTint="#17eb49"
        android:onClick="handleEditProfile"
        android:src="@drawable/icon_edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BtnEditProfileCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="16dp"
        android:backgroundTint="#e82525"
        android:onClick="handleEditProfile"
        android:src="@drawable/icon_remove" />

    <!--    android:orientation="vertical">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ProfilePic"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/SelectProfilePic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/ProfilePic"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_add_photo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/FirstNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="First Name"
                        android:textAlignment="center"
                        android:textColor="#289DEB"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/LastNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Last Name"
                        android:textColor="#289DEB"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/IcTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="IC"
                        android:textColor="#289DEB"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ContactTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Contact"
                        android:textColor="#289DEB"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/AddressTV"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Address"
                        android:textColor="#289DEB"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/PostCodeTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Post Code"
                        android:textColor="#289DEB"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/StateTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="State"
                        android:textColor="#289DEB"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/PasswordTV"
                        android:textColor="#289DEB"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Password"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CPasswordTV"
                        android:layout_width="match_parent"
                        android:textColor="#289DEB"
                        android:layout_height="40dp"
                        android:text="Confirm Password"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ResetPassword"
                        android:layout_width="70dp"
                        android:layout_marginLeft="40dp"
                        android:layout_height="70dp"
                        android:background="@drawable/change_password" />

                    <TextView
                        android:id="@+id/ResetPasswordTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Change Password"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/profile_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/profile_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/profile_ic"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/profile_contact"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/profile_address"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/profile_post_code"
                        android:inputType="number"
                        android:maxLength="5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#FFFFFF" />

                    <Spinner
                        android:id="@+id/profile_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/profile_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/profile_confirm_password"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:layout_height="40dp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/profile_save"
                        android:text="Save"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_main"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>